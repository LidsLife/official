<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Account Session • LIDS Life Network</title>

  <style>
    :root { color-scheme: dark; }
    html, body { height: 100%; margin: 0; }

    body {
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      background: #0b0f19;
      color: #e7eefc;
    }

    header {
      padding: 18px 20px;
      border-bottom: 1px solid rgba(255,255,255,.12);
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
    }

    .brand {
      display: flex;
      flex-direction: column;
      line-height: 1.1;
    }
    .brand b { font-size: 16px; }
    .brand span { font-size: 12px; opacity: .7; }

    nav a {
      color: inherit;
      text-decoration: none;
      padding: 8px 10px;
      border-radius: 10px;
      opacity: .85;
    }
    nav a:hover {
      background: rgba(255,255,255,.08);
      opacity: 1;
    }

    main {
      max-width: 980px;
      margin: 0 auto;
      padding: 28px 20px 40px;
      display: grid;
      gap: 18px;
    }

    .card {
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.04);
      border-radius: 16px;
      padding: 18px;
    }

    .hero h1 {
      margin: 0 0 8px;
      font-size: 24px;
      letter-spacing: .2px;
    }

    .muted { opacity: .75; font-size: 13px; }

    .row {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      align-items: center;
      margin-top: 12px;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border: 1px solid rgba(255,255,255,.16);
      background: rgba(255,255,255,.06);
      color: inherit;
      text-decoration: none;
      padding: 10px 14px;
      border-radius: 12px;
      font-weight: 700;
      font-size: 14px;
      cursor: pointer;
      user-select: none;
      white-space: nowrap;
    }
    .btn:hover { background: rgba(255,255,255,.10); }

    .pill {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 8px 10px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,.14);
      background: rgba(255,255,255,.05);
      font-size: 12px;
      opacity: .9;
      user-select: none;
      white-space: nowrap;
    }

    code {
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", monospace;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      margin-top: 12px;
    }

    @media (max-width: 820px) {
      .grid { grid-template-columns: 1fr; }
    }

    .kv {
      display: grid;
      gap: 8px;
      margin-top: 10px;
    }
    .kvRow {
      display: grid;
      grid-template-columns: 160px 1fr;
      gap: 10px;
      padding: 10px 12px;
      border: 1px solid rgba(255,255,255,.10);
      background: rgba(255,255,255,.03);
      border-radius: 14px;
    }
    .kvRow .k { opacity: .7; font-size: 12px; }
    .kvRow .v { font-size: 12px; word-break: break-word; white-space: pre-wrap; }

    footer {
      max-width: 980px;
      margin: 0 auto;
      padding: 0 20px 26px;
      opacity: .65;
      font-size: 12px;
    }
  </style>

  <script>
    // Hard gate: if session not active -> send to account_login.html
    (function () {
      const session = localStorage.getItem("lids_session");
      if (session !== "active") {
        window.location.href = "account_login.html";
      }
    })();
  </script>
</head>

<body>
  <header>
    <div class="brand">
      <b>LIDS Life Network</b>
      <span>• Account Session •</span>
    </div>
    <nav>
      <a href="index.html">Home</a>
      <a href="account.html">Account</a>
      <a href="game.html">Game</a>
      <a href="social.html">Social</a>
      <a href="data.html">Data</a>
    </nav>
  </header>

  <main>
    <section class="card hero">
      <h1>Session Active</h1>
      <div class="muted">
        You are currently authenticated locally (v0). This is a placeholder session page.
      </div>

      <div class="row">
        <span class="pill">Session: <code id="sessionState">active</code></span>
        <span class="pill">Profile: <code id="profileName">LocalPlayer</code></span>
        <span class="pill">Scope: <code>local-only</code></span>
      </div>

      <div class="row">
        <a class="btn" href="data.html">View Local Data</a>
        <a class="btn" href="social.html">Social</a>
        <a class="btn" href="game.html">Game</a>
        <button class="btn" onclick="logout()">Logout</button>
      </div>
    </section>

    <section class="card">
      <b style="font-size:14px; letter-spacing:.2px;">Session Details</b>
      <div class="muted" style="margin-top:6px;">
        Public-safe fields only. No passwords/secrets are stored or displayed here.
      </div>

      <div class="grid">
        <div>
          <div class="muted" style="margin-top:12px;">Identity</div>
          <div class="kv" id="kvIdentity"></div>
        </div>

        <div>
          <div class="muted" style="margin-top:12px;">Client</div>
          <div class="kv" id="kvClient"></div>
        </div>
      </div>
    </section>
  </main>

  <footer>
    © 2026 • Hosted on GitHub Pages • LIDS Life Network Account Layer
  </footer>

  <script>
    function escapeHtml(s) {
      return String(s)
        .replaceAll("&", "&amp;")
        .replaceAll("<", "&lt;")
        .replaceAll(">", "&gt;")
        .replaceAll('"', "&quot;")
        .replaceAll("'", "&#039;");
    }

    function addKV(el, key, val) {
      const row = document.createElement("div");
      row.className = "kvRow";
      row.innerHTML = `
        <div class="k">${escapeHtml(key)}</div>
        <div class="v">${escapeHtml(val)}</div>
      `;
      el.appendChild(row);
    }

    function boot() {
      const session = localStorage.getItem("lids_session") || "inactive";
      document.getElementById("sessionState").textContent = session;

      // v0: simple local profile name
      const name = localStorage.getItem("lids_profile_name") || "LocalPlayer";
      document.getElementById("profileName").textContent = name;

      const idEl = document.getElementById("kvIdentity");
      const clEl = document.getElementById("kvClient");

      idEl.innerHTML = "";
      clEl.innerHTML = "";

      addKV(idEl, "profile_name", name);
      addKV(idEl, "session", session);
      addKV(idEl, "created_at", new Date().toISOString());
      addKV(idEl, "note", "Local-only session prototype (v0)");

      addKV(clEl, "timezone", (Intl.DateTimeFormat().resolvedOptions().timeZone || "unknown"));
      addKV(clEl, "language", (navigator.language || "unknown"));
      addKV(clEl, "platform", (navigator.platform || "unknown"));
      addKV(clEl, "user_agent", navigator.userAgent);
    }

    function logout() {
      // v0: clear session flag
      localStorage.setItem("lids_session", "inactive");
      // optional: clear local profile name (comment out if you want it persistent)
      // localStorage.removeItem("lids_profile_name");
      window.location.href = "account_login.html";
    }

    boot();
  </script>
</body>
</html>
